<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/rl_no_account"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:visibility="gone">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_no_account"
            android:layout_width="@dimen/dimen_10x10"
            android:layout_height="@dimen/dimen_10x10"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/ic_account"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dimen_4x1"
            android:text="@string/add_account_to_get_started"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"/>
    </LinearLayout>
</RelativeLayout>