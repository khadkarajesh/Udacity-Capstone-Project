<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.rajesh.udacitycapstoneproject.weather.WeatherActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_22x10"
        android:scaleType="centerCrop"
        android:src="@drawable/scene"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_8x1">

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/dimen_8x2"
            android:drawableLeft="@drawable/ic_clock"
            android:gravity="center_vertical"
            android:text="10:30 AM"/>

        <TextView
            android:id="@+id/tv_max_min_temp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dimen_8x2"
            android:drawableRight="@drawable/ic_temperature"
            android:gravity="center_vertical"
            android:text="20H 30L"
            android:textColor="@color/brown"/>
    </RelativeLayout>

    <ImageView
        android:id="@+id/iv_weather_condition_icon"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/dimen_8x1"
        android:layout_marginTop="@dimen/dimen_8x1"
        android:src="@drawable/ic_account"/>

    <TextView
        android:id="@+id/tv_weather_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dimen_8x1"
        android:gravity="center"
        android:textColor="@color/brown"
        android:textSize="@dimen/dimen_text_7x5"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/tv_temp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/dimen_8x1"
        android:gravity="center"
        android:text="7 c"
        android:textColor="@color/brown"
        android:textSize="@dimen/dimen_text_6x5"
        android:textStyle="bold"/>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_pressure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/dimen_8x2"
            android:text="Pressure: 30 pa"
            android:textColor="@color/brown"/>

        <TextView
            android:id="@+id/tv_humidity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dimen_8x2"
            android:text="Humidity 300"
            android:textColor="@color/brown"/>
    </RelativeLayout>
</LinearLayout>
